<div class="form-container radius-box glassy-bg small-10 small-centered medium-8 large-6 columns">
    <div class="ramka">
	  <h3 class="formi">Регистрация</h3>

	  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	      <%= devise_error_messages! %>

	      <div class="mb1"><%= f.email_field :email, autofocus: true, placeholder: "Почта", class: "radius" %></div>

	      <div class="mb1"><%= f.password_field :password, autocomplete: "off", placeholder: "Пароль", class: "radius" %></div>

	      <div class="mb1"><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Повторите пароль", class: "radius" %></div>

	      <%= f.submit "Зарегистрироваться" %>
	  <% end %>
	  <%= render "devise/shared/links" %>
	</div>  
</div>